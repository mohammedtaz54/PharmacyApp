<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:orientation="vertical"
    tools:context="com.nsa.clientproject.welshpharmacy.DefaultSettings">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/services_settings">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/app_setup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/application_setup"
            android:textSize="@dimen/title_text_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/services_required_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/require_services"
            app:layout_constraintTop_toBottomOf="@id/app_setup_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="68dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_required_title"
            tools:layout_editor_absoluteX="0dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/services_required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/DISPENSING"
                    android:tag="DISPENSING"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/DISPENSING" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/FLU_SHOT"
                    android:tag="FLU_SHOT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/FLU_SHOT" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/BLOOD_PRESSURE_MONITORING"
                    android:tag="BLOOD_PRESSURE_MONITORING"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BLOOD_PRESSURE_MONITORING" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/ALCOHOL_ADVICE"
                    android:tag="ALCOHOL_ADVICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ALCOHOL_ADVICE" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/EMERGENCY_SUPPLY"
                    android:tag="EMERGENCY_SUPPLY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/EMERGENCY_SUPPLY" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/MEDICINE_REVIEW"
                    android:tag="MEDICINE_REVIEW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MEDICINE_REVIEW" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/MINOR_AILMENT"
                    android:tag="MINOR_AILMENT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MINOR_AILMENT" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/NEW_MEDICINE"
                    android:tag="NEW_MEDICINE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NEW_MEDICINE" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/PREGNANCY_TEST"
                    android:tag="PREGNANCY_TEST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/PREGNANCY_TEST" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/WEIGHT_MANAGEMENT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/WEIGHT_MANAGEMENT" />

            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/show_welsh_services"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <!-- Welsh services here -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/welsh_services_settings"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/app_setup_title_welsh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/application_setup"
            android:textSize="@dimen/title_text_size" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/services_required_title_welsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/require_services_welsh"
            app:layout_constraintTop_toBottomOf="@id/app_setup_title_welsh" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="68dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/services_required_title_welsh"
            tools:layout_editor_absoluteX="0dp">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/services_required_welsh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/DISPENSING_WELSH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="DISPENSING"
                    android:text="@string/DISPENSING" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/FLU_SHOT_WELSH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="FLU_SHOT"
                    android:text="@string/FLU_SHOT" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/BLOOD_PRESSURE_MONITORING_WELSH"
                    android:layout_width="wrap_content"
                    android:tag="BLOOD_PRESSURE_MONITORING"
                    android:layout_height="wrap_content"
                    android:text="@string/BLOOD_PRESSURE_MONITORING" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/ALCOHOL_ADVICE_WELSH"
                    android:tag="ALCOHOL_ADVICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ALCOHOL_ADVICE" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/EMERGENCY_SUPPLY_WELSH"
                    android:layout_width="wrap_content"
                    android:tag="EMERGENCY_SUPPLY"
                    android:layout_height="wrap_content"
                    android:text="@string/EMERGENCY_SUPPLY" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/MEDICINE_REVIEW_WELSH"
                    android:tag="MEDICINE_REVIEW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MEDICINE_REVIEW" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/MINOR_AILMENT_WELSH"
                    android:tag="MINOR_AILMENT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MINOR_AILMENT" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/NEW_MEDICINE_WELSH"
                    android:layout_width="wrap_content"
                    android:tag="NEW_MEDICINE"
                    android:layout_height="wrap_content"
                    android:text="@string/NEW_MEDICINE" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/PREGNANCY_TEST_WELSH"
                    android:layout_width="wrap_content"
                    android:tag="PREGNANCY_TEST"
                    android:layout_height="wrap_content"
                    android:text="@string/PREGNANCY_TEST" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/WEIGHT_MANAGEMENT_WELSH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="WEIGHT_MANAGEMENT"
                    android:text="@string/WEIGHT_MANAGEMENT" />

            </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/show_location_options"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev"
            android:id="@+id/show_english_services"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/show_location_options"
            android:paddingEnd="20dp"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>


