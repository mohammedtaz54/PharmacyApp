<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context="com.nsa.clientproject.welshpharmacy.DefaultSettings">




    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cbBP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/BLOOD_PRESSURE_MONITORING"

        />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cbFS"
        android:text="@string/FLU_SHOT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/user_postcode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="@string/current_postcode"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:maxLength="8" />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/pharmacy_max_distance"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:hint="@string/maximum_distance_to_travel"
        android:inputType="number|numberDecimal"
        android:maxLength="4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_settings" />

    </LinearLayout>



</LinearLayout>


