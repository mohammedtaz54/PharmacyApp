<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsa.clientproject.welshpharmacy.PharmacyView">

    <TextView
        android:id="@+id/single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/single_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="309dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/single_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opening Times"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="509dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/services_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services offered in English"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"/>


    <ListView
        android:id="@+id/single_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            ></ListView>
    <TextView
        android:id="@+id/services_title_welsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services offered in Welsh"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>
    <ListView
        android:id="@+id/single_welsh_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></ListView>
    </android.support.v7.widget.LinearLayoutCompat>
