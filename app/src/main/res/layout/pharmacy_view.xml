<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.nsa.clientproject.welshpharmacy.PharmacyView">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/single_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Name"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="1dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/single_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/light_grey"
                android:text="@string/location"
                android:textSize="13sp"
                tools:layout_editor_absoluteX="189dp"
                tools:layout_editor_absoluteY="309dp" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/services_offered_in_english"
                android:textSize="@dimen/size_title_single_pharmacy"
                android:textStyle="bold" />


            <ListView
                android:id="@+id/single_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_grey" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/services_title_welsh"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/services_offered_in_welsh"
                android:textSize="@dimen/size_title_single_pharmacy"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/single_welsh_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/light_grey" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/opening_times"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/white"
                android:text="@string/opening_times"
                android:textSize="@dimen/size_title_single_pharmacy"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/single_opening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/other_pharmacy_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/white"
                android:text="@string/other_pharmacy_details"
                android:textSize="19sp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:autoLink="all"
                android:clickable="true"
                android:drawableLeft="@drawable/website"
                android:padding="5dp"
                android:text="@string/website" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/call_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/call"
                android:text="@string/call_now" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/map_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/directions"
                android:text="@string/map_now" />


        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/plusmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/ic_add_circle_black_24dp"
            app:backgroundTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/thumbsuplayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/plusmenu"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/thumbsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/white"
                android:clickable="true"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:visibility="invisible"
                app:fabSize="mini">

            </android.support.design.widget.FloatingActionButton>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/thumbsdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:clickable="true"
                android:src="@drawable/ic_thumb_down_black_24dp"
                android:visibility="invisible"
                app:fabSize="mini" />


        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

